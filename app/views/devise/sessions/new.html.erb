
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>

      <img class="offset-4 mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
  <h2 class="mb-3 font-weight-normal h3">Por favor, logar-se</h2>
  <div class="field">
    <%= f.label :email, class: 'sr-only' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'EndereÃ§o de e-mail', class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :password, class: 'sr-only' %><br />
    <%= f.password_field :password, autocomplete: "current-password",placeholder: 'Senha', class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, " Lembrar-me" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Entrar", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
